{
  "compilerOptions": {
    "incremental": true,
    "outDir": "./build",
    "module": "nodenext",
    "target": "esnext",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@vk": ["./lib/vk/index"],
      "@events": ["./lib/events"],
    },
    "alwaysStrict": false,
    "strict": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
